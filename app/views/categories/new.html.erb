<h1>New Category</h1>

<%= form_with  scope: :category, url: categories_create_path, local: true do |f| %>
	<% if @category.errors.any? %>
    	<div class="errors">
      	Total errors: <%= @category.errors.count %>
      	<ul>
        	<% @category.errors.full_messages.each do |message| %>
            	<li><%= message %></li>
        	<% end %>
      	</ul>
    	</div>
	<% end %>

	<div>
  	<%= f.label :title %>
  	<%= f.text_field :title %>
	</div>

	<div>
  	<%= f.submit %>
	</div>
<% end %>