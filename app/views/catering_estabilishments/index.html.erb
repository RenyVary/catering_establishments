<div class="container">
  <h1 class="pt-4">All places</h1>
  <div class="m-0 search_link"> 
    <p>Select categoriy: 
      <ul class="navbar-nav navbar-expand-sm between">
          <li class="nav-item pl-1"> <%= link_to 'All', '#', class: "nav-link"; %> </li>
          <li class="nav-item pl-1"> <%= link_to 'Restaurants', '#', class: "nav-link"; %> </li>
          <li class="nav-item pl-1"> <%= link_to 'Cafes', '#', class: "nav-link active"; %> </li>
          <li class="nav-item pl-1"> <%= link_to 'Bars', '#', class: "nav-link"; %> </li>
      </ul> 
    </p>
  </div>
  <% if @estabilishments.present? %>
    <table>
      <% @estabilishments.each do |estabilishment| %>
        <tr>
          <% if estabilishment.pictures != nil %>
            <% (0...1).each do |picture| %>
              <td style="width:300px; height=300px;"> 
              <%= image_tag(estabilishment.pictures[picture], style:'width:100%; height: auto') %> 
              </td>
            <%end %>
          <% else %>
            <td> <% nil %> </td>
          <% end %>
          <td><%= link_to "#{estabilishment.title}", catering_estabilishment_path(estabilishment.id) %></td>
          <td>
            <%= link_to 'Delete', estabilishment, method: :delete, data: {confirm: 'Are you sure?'} %>
          </td>
        </tr>
        <% end %>
    </table>
  <% end %>
    <%= link_to 'Create new establishment', new_catering_estabilishment_path %>
</div>
